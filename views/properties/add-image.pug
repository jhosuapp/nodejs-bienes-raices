extends ../layout/admin
block metatags
    meta(name="csrf-token" content= csrfToken)
block content
    section.container.container--center
        article.ctm-fonts.container-form.container-form--big.ctm-fonts--center
            h1=page

            <!--MENSAJES DE ERROR-->
                p(class="msg-error hidden") Debe añadir una imagen

            form.form-general.form-create(method="POST" action=`/properties/add-image/${validatePropertie.id}?_csrf=${csrfToken}` enctype="multipart/form-data" noValidate)
                <!--TOKEN-->
                input(type="hidden" name="_csrf" value=csrfToken)
                div.drop-zone#drop-zone
                    label(for="image")
                    span Añade o arrastra una imagen
                    input(type="file" name="imageProperties" id="imageProperties")
                
                div.block-input.render-image
                    img#render-image
                    div.render-image__remove#remove-image
                        p Eliminar imagen
                div.block-input.render-image__error#render-error
                        p.msg-error Las extensiones permitidas son las siguientes:

                div.block-input
                    button.btn(type="submit" value="Subir imagen")=page
block scripts
    script(src="/js/dropZone.js") 