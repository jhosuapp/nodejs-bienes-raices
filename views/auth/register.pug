extends ../layout/index

block content
    section.container.container--center
        article.ctm-fonts.container-form.ctm-fonts--center
            h1=page

            <!--MENSAJES DE ERROR-->
            if(errors)
                div(class="")
                    each error in errors
                        p(class="msg-error")=error.msg

            form.form-general(method="POST" action="/auth/register" noValidate)
                if(!succesfull)
                    <!--TOKEN-->
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div.block-input
                        label(for="name") Nombre
                        input#name(type="text" placeholder="Nombre" name="name" value=user ? user.name : '') 
                    div.block-input
                        label(for="email") Email
                        input#email(type="email" placeholder="Email" name="email" value=user ? user.email : '')
                    div.block-input
                        label(for="password") Contraseña
                        input#password(type="password" placeholder="Contraseña" name="password")
                    div.block-input
                        label(for="verifyPass") Repetir contraseña
                        input#verifyPass(type="password" placeholder="Repetir contraseña" name="verifyPass")
                    div.block-input.block-input--flex
                        a(href="/auth/register") ¿Ya tienes una cuenta? Iniciar sesión 
                        a(href="/auth/recover-password") Olvide mi contraseña
                    div.block-input
                        button.btn(type="submit" value="Crear cuenta")=page
                if(succesfull)
                    div.success
                        p=welcome
                        img(src="/images/svg/check.svg")
                        p=description